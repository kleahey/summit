<div class="container-fluid">
  <table class="table table-bordered table-striped">
    <thead>
      <tr>
        <th></th>
        <% @sessions.each do |s| %>
          <th colspan="2"><%= s.name %></th>
        <% end %>
      </tr>
      <tr>
        <th></th>
        <% @sessions.each do |s| %>
          <th><%= s.start_time.strftime("%I:%M %P") %></th>
          <th><%= s.end_time.strftime("%I:%M %P") %></th>
        <% end %>
      </tr>
    </thead>
    <tbody>
      <% @teammembers.each do |t| %>
        <tr>
          <td><%= t.teammember.name %></td>
          <% @sessions.each do |s| %>
              <% if s.id == t.session_id %>
                <td class="text-center" colspan="2"><%= t.role.name %></td>
              <% else %>
                <td class="text-center" colspan="2"></td>
              <% end %>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
