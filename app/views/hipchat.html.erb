<div class="container">
    <%= form_tag hipchat_path, method: "post", class: "form-inline" do %>
    <%= select_tag :color, options_for_select("Red", "Yellow", "Green"), :prompt => "Please select", class: "form-control" %>
    <%= text_field_tag :message, nil, class: "form-control", placeholder: "Enter your message here" %>
    <%= select_tag :notify, options_for_select("true", "false") %>
    <%= select_tag :message_format, options_for_select("html") %>
    <%= submit_tag "Submit Post", name: nil, class: "btn btn-primary" %>
    <% end %>
</div>
